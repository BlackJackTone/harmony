count = 0;
entered = [ False, False ];
done = [ False, False ];

def incrementer(self):
    entered[self] = True;
    if entered[1 - self]:         # if the other thread has already started
        await done[1 - self];     # wait until it is done
    ;
    count = count + 1;
    done[self] = True;
;
def main():
    await all(done);
    assert count == 2, count;
;

spawn incrementer(0);
spawn incrementer(1);
spawn main();
