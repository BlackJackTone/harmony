def p(self):
    while True:
        flags[self] := True;
        turn := 1 - self;
        while flags[1 - self] and (turn == (1 - self)):
        end while
        @cs:    # critical section
        flags[self] := False;
    end while
end def

flags := dict{ 0: False, 1: False };
turn := 0;
spawn p(0), 0;
spawn p(1), 1;
