routine p(self):
    while True:
        turn := 1 - self;
        flags[self] := True;
        while flags[1 - self] /\ (turn == (1 - self)):
        end while
        @cs: // critical section
        flags[self] := False;
    end while
end routine

flags := {< 0: False, 1: False >};
turn := 0;
spawn p, 0;
spawn p, 1;
