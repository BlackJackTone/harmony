def process(self):
    while choose({ False, True }):
        # Enter critical section
        flags[self] = True;
        while flags[1 - self]:
            pass;
        ;

        # Critical section
        @cs: assert (atLabel "cs") == dict{ nametag(): 1 };

        # Leave critical section
        flags[self] = False;
    ;
;
flags = dict{ 0: False, 1: False };
spawn process(0), 0;
spawn process(1), 1;
