# correct mutual exclusion using a binary semaphore

import synch;

def p():
    while choose({ False, True }):
        call P&(mysema);
        @cs: assert atLabel.cs == dict{ nametag(): 1 };
        call V&(mysema);
    ;
;
mysema = Semaphore(1);
atomic:
    spawn p(), 0;
    spawn p(), 0;
    spawn p(), 1;
    spawn p(), 1;
