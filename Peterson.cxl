# Peterson's algorithm

def p(self):
    while True:
        flags[self] = True;
        turn = 1 - self;
        while flags[1 - self] and (turn == (1 - self)):
            pass;
        ;
        @cs: atomic: pass;;   # critical section
        flags[self] = False;
    ;
;
flags = dict{ 0: False, 1: False };
turn = 0;

spawn p(0), 0;
spawn p(1), 1;
