# Broken Peterson's algorithm by swapping first two assignments

flags = [ False, False ];
turn = choose({0, 1});

def process(self):
    while choose({ False, True }):
        turn = 1 - self;
        flags[self] = True;
        await (not flags[1 - self]) or (turn == self);
        @cs: assert atLabel.cs == dict{ nametag(): 1 };
        flags[self] = False;
    ;
;

spawn process(0);
spawn process(1);
