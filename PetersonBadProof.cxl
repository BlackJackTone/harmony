# Peterson's algorithm

def process(self):
    while True:
        flags[self] = True;
        turn = 1 - self;
        while flags[1 - self] and (turn == (1 - self)):
            pass;
        ;
        @cs: assert (not (flags[1 - self])) or (turn == self);
        flags[self] = False;
    ;
;
flags = [ False, False ];
turn = 0;

spawn process(0), 0;
spawn process(1), 1;
