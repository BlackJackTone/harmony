# correct mutual exclusion using ordinary locks

import synch;

def p():
    while True:
        @ncs: assert True, True;
        call lock&(mylock);
        @cs: assert (atLabel "cs") == dict{ nametag(): 1 }, atLabel("cs");
        call unlock&(mylock);
    ;
;
mylock = Lock();
atomic:
    spawn p(), 0;
    spawn p(), 0;
    spawn p(), 1;
    spawn p(), 1;
;
