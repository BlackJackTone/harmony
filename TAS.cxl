# Correct mutual exclusion using Test-And-Set

import synch;

def p():
    while True:
        while tas&(mylock):
            pass;
        ;
        @cs: atomic: pass;;   # critical section
        mylock = False;
    ;
;
mylock = Lock();
atomic:
    spawn p(), 0;
    spawn p(), 0;
    spawn p(), 1;
    spawn p(), 1;
