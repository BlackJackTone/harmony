import synch;

def increment():
    let prior = setintlevel(True):
        lock(?countlock);
            count += 1;
        unlock(?countlock);
        setintlevel(prior);
    ;
;
def handler(self):
    increment();
    done[self] = True;
;
def process(self):
    trap handler(self);
    increment();
    await done[self];
;
def main(self):
    await all(done);
    assert count == 4, count;
;
count = 0;
countlock = Lock();
done = [ False, False ];
spawn process(0);
spawn process(1);
spawn main();
