from synch import *;

const N = 5;

forks = dict{ Lock() for i in {1..N} };
sema = Semaphore(N - 1);

def diner(which):
    let left, right = (which, (which % N) + 1):
        while choose({ False, True }):
            P(?sema);
            acquire(?forks[left]);
            acquire(?forks[right]);
            # dine
            release(?forks[left]);
            release(?forks[right]);
            V(?sema);
            # think
        ;
    ;
;

for i in {1..N}:
    spawn diner(i);
;
